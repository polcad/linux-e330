#!/bin/bash
# Linux Setup Script (LSS)
# Author: iseijin
# Date: 13/05/2013
# Description: Use git to retrieve various Linux Configuration files from a repository on github.
# Files:
#       .bashrc
#       .bash_aliases
#       .vimrc
#       .Xresources
# Dirs:
#       $HOME/vim/
#
# Scripts will be stored in $HOME/bin - create the directory if it doesn't exist
if [ -d "$HOME/bin" ]; then
  echo $HOME/bin already exists.
else
  mkdir $HOME/bin
fi

# Use Git
if [ -d "$HOME/bin/LSS" ]; then
  echo The LSS git already exists, skipping this part.
else
  git clone git@github.com:iseijin/LSS.git $HOME/bin/LSS
fi

# Create sym links to files in LSS/configFiles
if [ -L ~/.bashrc ]; then
  echo .bashrc already exists...
else
  ln -s ~/bin/LSS/configFiles/.bashrc ~/.bashrc
fi

if [ -L ~/.bash_aliases ]; then
  echo .bash_aliases already exists...
else
  ln -s ~/bin/LSS/configFiles/.bash_aliases ~/.bash_aliases
fi

if [ -L ~/.vimrc ]; then
  echo .vimrc already exists...
else
  ln -s ~/bin/LSS/configFiles/.vimrc ~/.vimrc
fi

if [ -L ~/.Xresources ]; then
  echo .Xresources already exists...
else
  ln -s ~/bin/LSS/configFiles/.Xresources ~/.Xresources
fi

#if [ -d "~/.vim" ]; then
#  echo .vim already exists...
#else
#  ln -s ~/bin/LSS/configFiles/.vim ~/.vim
#fi
